{% extends 'base.html.twig' %}

{% block header %}{{ 'category.edit.title'|trans }}{% endblock %}
{% block header_desc %}{{ 'category.edit.desc'|trans }}{% endblock %}

{% block body %}
    <div class="box">
        <div class="box-body">
            {{ form_start(edit_form) }}
                {{ form_widget(edit_form) }}
                <input type="submit" class="btn btn-default pull-left" value="{{ 'btn.edit'|trans }}" />
            {{ form_end(edit_form) }}
            {{ form_start(delete_form, { attr: {class: 'pull-right'} }) }}
                <input type="submit" class="btn btn-danger pull-right" value="{{ 'btn.delete'|trans }}" onclick="return confirm('{{ 'confirm.message' }}');">
            {{ form_end(delete_form) }}
        </div>
    </div>

{% endblock %}
