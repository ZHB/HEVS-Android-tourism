{% extends 'base.html.twig' %}

{% block breadcrumb %}
    <li><a href="{{ path('home') }}"><i class="fa fa-home"></i> Home</a></li>
    <li class="active"><a href="{{ path('quiz_index') }}">Quiz</a></li>
{% endblock %}

{% block body %}
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Quiz list</h3>
        </div>
        <div class="box-body no-padding">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for quiz in quizzes %}
                    <tr>
                        <td>{{ quiz.name }}</td>
                        <td>
                            <a class="fa fa-edit" href="{{ path('quiz_edit', { 'id': quiz.id }) }}">{{ 'edit'|trans }}</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                    <a href="{{ path('quiz_new') }}" class="btn btn-app">
                        <i class="fa fa-plus"></i> {{ 'add'|trans }}
                    </a>
                </tfoot>
            </table>
        </div>
    </div>
{% endblock %}
