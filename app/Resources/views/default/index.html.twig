{% extends 'base.html.twig' %}

{% block header %}
    {{ 'home.title'|trans }}
{% endblock %}

{% block header_desc %}
    {{ 'home.desc'|trans }}
{% endblock %}

{% block breadcrumb %}

{% endblock %}

{% block body %}
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-lg-4 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-green">
                <div class="inner">
                    <h3>{{ quizzes|length }}</h3>
                    <p>{{ 'stats.office_quizzes'|trans }}</p>
                </div>
                <div class="icon">
                    <i class="ion ion-stats-bars"></i>
                </div>
                <!-- <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a> -->
            </div>
        </div><!-- ./col -->
        <div class="col-lg-4 col-xs-6">
            <!-- small box -->
            <div class="small-box bg-aqua">
                <div class="inner">
                    <h3>{{ tourists|length }}</h3>
                    <p>{{ 'stats.tourist_quizzes'|trans }}</p>
                </div>
                <div class="icon">
                    <i class="ion ion-pie-graph"></i>
                </div>
            </div>
        </div><!-- ./col -->
        <div class="col-lg-4 col-xs-12">
            <!-- small box -->
            <div class="small-box bg-yellow">
                <div class="inner">
                    <h3>{{ users|length }}</h3>
                    <p>{{ 'stats.all_members'|trans }}</p>
                </div>
                <div class="icon">
                    <i class="ion ion-person-add"></i>
                </div>
            </div>
        </div><!-- ./col -->
    </div><!-- /.row -->
    <div class="row">
        <div class="col-lg-12 col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">{{ 'tourists_quiz_answer'|trans }}</h3>
                </div><!-- /.box-header -->
                <div class="box-body no-padding">
                    <table class="table table-bordered">
                        <tbody>
                        <tr>
                            <th>{{ 'tourist_reference'|trans }}</th>
                            <th>{{ 'tourist.creation_date'|trans }}</th>
                        </tr>
                        {% for tourist in tourists %}
                            <tr>
                                <td>
                                    <a href="{{ path('result_tourist_quizzes', { tourist_id: tourist.id }) }}">
                                        {{ tourist.reference }}
                                    </a>
                                </td>
                                <td>{{ tourist.creationDate|date("d.m.Y H:i") }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                </div><!-- /.box-body -->
            </div>
        </div>
    </div>
{% endblock %}