{% extends 'base.html.twig' %}

{% block header %}{{ 'question.edit'|trans }}{% endblock %}
{% block header_desc %}{% endblock %}

{% block body %}
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Question edit</h3>
        </div>
        <div class="box-body">
            {{ form_start(edit_form) }}
                {{ form_errors(edit_form) }}
                {{ form_row(edit_form.text) }}
                {{ form_row(edit_form.category) }}
                <div class="answers" data-prototype="{{ form_widget(edit_form.answers.vars.prototype)|e }}">
                    {% for answer in edit_form.answers %}
                        <div class="panel panel-default">
                            <div class="panel-body">
                                {{ form_row(answer) }}
                            </div>
                            <div class="panel-footer"></div>
                        </div>
                    {% endfor %}
                </div>
                <input type="submit" class="btn btn-primary btn-add-answer" value="Add a new answer" />
                <input type="submit" class="btn btn-primary btn-edit-question " value="Edit" />
            {{ form_end(edit_form) }}

            {{ form_start(delete_form, { attr: {class: 'form-delete-question pull-right'} }) }}
                {{ form_widget(delete_form) }}
                <input type="submit" class="btn btn-warning btn-delete-question" value="Delete" />
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ include('question/script_answers.html.twig') }}
{% endblock %}