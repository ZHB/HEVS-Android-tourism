{% extends 'base.html.twig' %}

{% block header %}{{ 'question.add.title'|trans }}{% endblock %}
{% block header_desc %}{{ 'question.add.desc'|trans }}{% endblock %}

{% block body %}
    <div class="box">
        <div class="box-body">
            {{ form_start(form) }}
                {{ form_errors(form) }}
                {{ form_row(form.text) }}
                {{ form_row(form.category) }}
                <div class="answers" data-prototype="{{ form_widget(form.answers.vars.prototype)|e }}">
                    {% for answer in form.answers %}
                        <div class="panel panel-default">
                            <div class="panel-body">
                                {{ form_row(answer) }}
                            </div>
                            <div class="panel-footer"></div>
                        </div>
                    {% endfor %}
                </div>
                <input type="submit" class="btn btn-default btn-add-answer" value="{{ 'btn.add'|trans }}" />
                <hr />
                <input type="submit" class="btn btn-success btn-edit-question " value="{{ 'btn.edit'|trans }}" />
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ include('question/script_answers.html.twig') }}
{% endblock %}