{% extends 'base.html.twig' %}

{% block header %}{{ 'question.creation'|trans }}{% endblock %}
{% block header_desc %}{% endblock %}

{% block body %}
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Question creation</h3>
        </div>
        <div class="box-body">
            {{ form_start(form) }}
                {{ form_errors(form) }}
                {{ form_row(form.text) }}
                {{ form_row(form.category) }}
                <div class="answers" data-prototype="{{ form_widget(form.answers.vars.prototype)|e }}">
                    {% for answer in form.answers %}
                        <div class="panel panel-default">
                            <div class="panel-body">
                                {{ form_row(answer) }}
                            </div>
                            <div class="panel-footer"></div>
                        </div>
                    {% endfor %}
                </div>
                <input type="submit" class="btn btn-primary btn-add-answer" value="Add a new answer" />
                <input type="submit" class="btn btn-primary btn-edit-question " value="Edit" />
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ include('question/script_answers.html.twig') }}
{% endblock %}